package Ex1;

import java.util.ArrayList;

public class Zoo {

	private ArrayList<Animal> animals;
	
	public Zoo(){
		animals = new ArrayList<Animal>();
	}
	
	public void addAnimal(Animal a){
		animals.add(a);
	}
	
	public void removeAnimal(Animal a){
		
		for(Animal x : animals){
			if(x.equals(a)){
				x=null;
			}
		}
	}
}
